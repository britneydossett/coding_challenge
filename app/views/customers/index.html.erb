    </thead>

    <tbody>
      <%= content_tag_for(:tr, @customers) do |user| %>
            <td><%= customer.name %></td>
            <td><%= customer.email %></td>
            <td><%= customer.phone %></td>
            <td><%= customer.timezone %></td>
            <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
