<div class="page-header">
  <h1>Your Tasks</h1>
  <h2>Your email|phone number</h2>
</div>

<div id="table-tasks">
  <table class="table-two">
    <thead class="thead-tasks">
      <tr>
        <th id="icon-tasks"><%= link_to new_task_path do %><i class="fa fa-plus-circle"></i><% end %></th>
        <th id="new-task">Add New Task</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody id="tasks-list">
      <%= content_tag_for(:tr, @tasks) do |task| %>
          <td></td>
          <td class="description"><%= task.description %></td>
        <td>
        <%= link_to("/tasks/#{task.id}/toggle_completed") do %>
          <% if task.completed %>
            <button type="submit">Completed!</button>
          <% else %>
            <button type="submit">Mark Completed</button>
          <% end %>
        <% end %>
        </td>
        <td></td>
      <% end %>
    </tbody>
  </table>
</div>


<%= form_for(@task, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @task.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h4>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :date, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.date_field :date, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :completed, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :completed, class: "form-control" %>
    </div>
  </div>
  <%= f.hidden_field :customer_id, :value => params[:id] %>
  <%#= f.hidden_field_tag :customer_id %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


